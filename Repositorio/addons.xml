<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.mpzwizard.matrix" name="[COLOR gold][B]MPZ MATRIX[/B][/COLOR]" version="1.0" provider-name="MPZ Matrix">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

	<extension point="xbmc.addon.repository" name="MPZmatrix">
        <info>https://raw.githubusercontent.com/MagoPoza/MPZmatrix/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/MagoPoza/MPZmatrix/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/MagoPoza/MPZmatrix/master/Repositorio/</datadir>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
    <summary lang="en">Wizard</summary>
    <description lang="en">Addon instalador del wizard MPZ MATRIX para Kodi 19.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>


        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.MPZmatrix.repor" name="[COLOR gold][B]MPZ MATRIX REPO[/B][/COLOR]" version="1.0" provider-name="MPZ matrix">
    <extension point="xbmc.addon.repository" name="MPZmatrix">
        <info>https://raw.githubusercontent.com/MagoPoza/MPZmatrix/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/MagoPoza/MPZmatrix/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/MagoPoza/MPZmatrix/master/Repositorio/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Repositorio wizard MPZ matrix</summary>
        <description></description>
        <disclaimer></disclaimer>
        <platform>all</platform>
    </extension>
</addon>
</addons>
